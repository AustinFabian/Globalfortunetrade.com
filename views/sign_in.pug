            // END Mobile Menu
      // END Header & Menu
      // Page Content
      .page-content
        section(data-padding='sm')
          .container
            .row.align-items-lg-center(data-aos='fade-up', data-padding='xstop')
              .col-12.col-md-8.offset-md-2.col-lg-6.offset-lg-3.col-xl-4.offset-xl-4

                form.form--login
                  .basic-form--border--round--row--boxed--shadow
                    .col-12.text-center
                      h5 Sign In
                      span.err(style="color: red; display:none;")
                    .field.col-12
                      input.form-field#userName(type='text', placeholder='Username', name='username', value='')
                    .field.col-12
                      input.form-field#password(type='password', placeholder='Password', name='password', value='')
                      span.info.text-right(data-active='true')
                        a.simple--primary--xs(href='password-recovery.html?a=forgot_password') Forgot Password?
                    #privacy-wrap.field.col-12
                      input#privacy-form.styled-checkbox(type='checkbox', value='value1')
                      label(for='privacy-form') Remember me next time
                    .field.col-12.text-center
                      input.btn--big--round--full(type='submit', value='Sign In')
                .row
                  .col-12.text-center
                    p.small
                      | Don&apos;t have an account? 
                      a.simple--primary--small(href='/signup') Sign up here
      // END Page Content
      // CTA Section
      section(data-aos='fade', data-padding='xstop')
        .container
          .row
            .col-12
              .ctabox-element--center--round--light
                .text
                  h2 EARN 8% AFFLIATES COMMISSION
                  p Cryptofortunetradesfx is a registered and licenced company in United Kingdom
                  a.btn--big--border--light--round(href='trade/images/cert222.png', target='_self') VIEW INCOPORATION CERTIFICATE
